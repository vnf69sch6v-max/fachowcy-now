rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Bookings - tylko dla uczestników
    match /bookings/{bookingId} {
      allow read: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.clientId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
    }
    
    // Reviews - klient może tworzyć, host może odpowiadać
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.resource.data.clientId == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.hostId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['response', 'responseAt']);
    }
    
    // Provider status - tylko właściciel
    match /provider_status/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public profiles - publiczny odczyt
    match /public_profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Subscriptions - tylko do odczytu dla właściciela (zapis backend/admin)
    match /subscriptions/{userId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only manageable via Admin SDK or backend
    }
    
    // Provider Schedules
    match /provider_schedules/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // FCM Tokens
    match /fcm_tokens/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chats - tylko uczestnicy konwersacji
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.professionalId == request.auth.uid ||
         request.auth.uid in resource.data.participantIds);
      
      allow create: if request.auth != null;
      
      allow update: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.professionalId == request.auth.uid ||
         request.auth.uid in resource.data.participantIds);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
