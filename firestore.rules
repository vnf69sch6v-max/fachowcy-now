rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ═══════════════════════════════════════════
    // HELPER FUNCTIONS
    // ═══════════════════════════════════════════
    
    function isUnchanged(field) {
      return request.resource.data[field] == resource.data[field];
    }
    
    function isStatusTransition(from, to) {
      return resource.data.status == from && request.resource.data.status == to;
    }
    
    function onlyUpdating(fields) {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(fields);
    }
    
    function isOwner() {
      return request.auth.uid == resource.data.clientId;
    }
    
    function isAssignedPro() {
      return request.auth.uid == resource.data.assignedProId;
    }

    // ═══════════════════════════════════════════
    // JOBS COLLECTION - State Machine
    // ═══════════════════════════════════════════
    
    match /jobs/{jobId} {
      // READ: Dostęp dla uczestników lub publiczny dla 'open'
      allow read: if resource.data.status == 'open' || 
                     request.auth.uid == resource.data.clientId ||
                     request.auth.uid == resource.data.assignedProId;
      
      // CREATE: Tylko zalogowani, tylko status 'open'
      allow create: if request.auth != null 
                    && request.resource.data.status == 'open'
                    && request.resource.data.clientId == request.auth.uid;
      
      // UPDATE: Złożona maszyna stanów
      allow update: if request.auth != null && (
        
        // SCENARIUSZ 1: Fachowiec akceptuje (open -> accepted)
        (
          isStatusTransition('open', 'accepted') &&
          request.resource.data.assignedProId == request.auth.uid &&
          isUnchanged('clientId') && 
          isUnchanged('title') && 
          isUnchanged('description')
        )
        
        ||
        
        // SCENARIUSZ 2: Klient anuluje (open -> cancelled)
        (
          isStatusTransition('open', 'cancelled') &&
          isOwner()
        )
        
        ||
        
        // SCENARIUSZ 3: Fachowiec kończy (accepted -> completed)
        (
          isStatusTransition('accepted', 'completed') &&
          isAssignedPro()
        )
        
        ||
        
        // SCENARIUSZ 4: Klient potwierdza zakończenie
        (
          isStatusTransition('completed', 'confirmed') &&
          isOwner()
        )
      );
      
      // PROPOSALS SUBCOLLECTION
      match /proposals/{proposalId} {
        allow read: if request.auth != null;
        
        allow create: if request.auth != null 
                      && request.resource.data.providerId == request.auth.uid
                      && request.resource.data.status == 'pending';
        
        // Tylko status może być zmieniony (przez transakcję z jobs)
        allow update: if request.auth != null &&
                      onlyUpdating(['status', 'acceptedAt']);
      }
    }
    
    // Bookings - tylko dla uczestników
    match /bookings/{bookingId} {
      allow read: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.clientId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
    }
    
    // Reviews - klient może tworzyć, host może odpowiadać
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.resource.data.clientId == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.hostId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['response', 'responseAt']);
    }
    
    // Provider status - tylko właściciel
    match /provider_status/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public profiles - publiczny odczyt
    match /public_profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Subscriptions - tylko do odczytu dla właściciela (zapis backend/admin)
    match /subscriptions/{userId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only manageable via Admin SDK or backend
    }
    
    // Provider Schedules
    match /provider_schedules/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // FCM Tokens
    match /fcm_tokens/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chats - tylko uczestnicy konwersacji
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.professionalId == request.auth.uid ||
         request.auth.uid in resource.data.participantIds);
      
      allow create: if request.auth != null;
      
      allow update: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.professionalId == request.auth.uid ||
         request.auth.uid in resource.data.participantIds);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && 
          (request.resource.data.senderId == request.auth.uid || 
           request.resource.data.senderId == 'system' ||
           request.resource.data.senderRole == 'system');
      }
    }
  }
}
